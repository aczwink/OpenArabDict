{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabDict HW4 translation entry definition",
    "description": "JSON Schema for OpenArabDict HW4 translation entry definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "complete": {
            "type": "boolean",
            "enum": [true]
        },
        "dialect": {
            "type": "string",
            "enum": [
                "msa"
            ]
        },
        "source": {
            "const": "hw4"
        },
        "source-page": {
            "type": "integer"
        },
        "text": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "usage": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "text": {
                        "type": "string"
                    },
                    "translation": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["example", "meaning-in-context"]
                    }
                },
                "required": ["text", "translation", "type"]
            }
        }
    },
    "required": ["dialect", "source", "source-page", "text"]
}