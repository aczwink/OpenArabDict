{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabDict free text translation entry definition",
    "description": "JSON Schema for OpenArabDict free text translation entry definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "dialect": {
            "type": "string",
            "enum": [
                "eg",
                "homsi",
                "lb",
                "levant",
                "ma",
                "msa",
                "southlevant",
                "sy"
            ]
        },
        "source": {
            "const": "free-text"
        },
        "text": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "url": {
            "type": "string"
        },
        "usage": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "text": {
                        "type": "string"
                    },
                    "translation": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["example", "meaning-in-context"]
                    }
                },
                "required": ["text", "translation", "type"]
            }
        }
    },
    "required": ["dialect", "source", "text"]
}