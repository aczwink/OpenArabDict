{    
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabDict derived word definition",
    "description": "JSON Schema for OpenArabDict derived word definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "derived": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        },
        "derivation": {
            "type": "string",
            "enum": [
                "adverbial-accusative",
                "definite-state",
                "elative-degree",
                "extension",
                "feminine",
                "instance-noun",
                "nisba",
                "plural",
                "singulative",
                "tool-noun"
            ]
        },
        "gender": {
            "type": "string",
            "enum": [
                "female",
                "male"
            ]
        },
        "text": {
            "type": "string"
        },
        "translations": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "../translations/OpenArabDictFreeTextTranslationEntry.json"
                    },
                    {
                        "$ref": "../translations/OpenArabDictHW4TranslationEntry.json"
                    }
                ]
            }
        },
        "type": {
            "enum": [
                "adjective",
                "adverb",
                "noun",
                "particle",
                "preposition",
                "pronoun"
            ]
        }
    },
    "required": ["derivation"]
}