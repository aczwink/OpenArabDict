{    
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabDict verb definition",
    "description": "JSON Schema for OpenArabDict verb definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "derived": {
            "type": "array",
            "items": {
                "$ref": "./OpenArabDictWord_verbderived.json"
            }
        },
        "form": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 2,
                    "maximum": 10
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "stem": {
                            "type": "integer",
                            "enum": [2, 3, 4, 5, 6, 7, 8, 9, 10]
                        },
                        "type": {
                            "type": "string",
                            "enum": ["irregular", "sound"]
                        }
                    },
                    "required": ["stem"]
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "stem": {
                            "type": "integer",
                            "const": 1
                        },
                        "variants": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    {
                                        "$ref": "../verbs/lb_variant.json"
                                    },
                                    {
                                        "$ref": "../verbs/msa_variant.json"
                                    }
                                ]
                            }
                        },
                        "stative-active-participle": {
                            "type": "boolean",
                            "const": true
                        }
                    },
                    "required": ["stem", "variants"]
                }
            ]
        },
        "translations": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "../translations/OpenArabDictFreeTextTranslationEntry.json"
                    },
                    {
                        "$ref": "../translations/OpenArabDictHW4TranslationEntry.json"
                    }
                ]
            }
        },
        "type": {
            "const": "verb"
        }
    },
    "required": ["form", "type"]
}