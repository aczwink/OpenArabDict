{    
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabDict verb definition",
    "description": "JSON Schema for OpenArabDict verb definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "derived": {
            "type": "array",
            "items": {
                "$ref": "./OpenArabDictWord_derived.json"
            }
        },
        "dialect": {
            "type": "string",
            "enum": [
                "lb",
                "msa"
            ]
        },
        "form": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 2,
                    "maximum": 10
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "stem": {
                            "type": "integer",
                            "const": 1
                        },
                        "variants": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "dialect": {
                                        "type": "string",
                                        "enum": [
                                            "lb",
                                            "msa"
                                        ]
                                    },
                                    "parameters": {
                                        "type": "string",
                                        "minLength": 2,
                                        "maxLength": 4
                                    }
                                },
                                "required": ["dialect", "parameters"]
                            }
                        }
                    },
                    "required": ["stem", "variants"]
                }
            ]
        },
        "translations": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "../translations/OpenArabDictFreeTextTranslationEntry.json"
                    },
                    {
                        "$ref": "../translations/OpenArabDictHW4TranslationEntry.json"
                    }
                ]
            }
        },
        "type": {
            "const": "verb"
        }
    },
    "required": ["dialect", "form", "type"]
}