{    
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabDict particle definition",
    "description": "JSON Schema for OpenArabDict particle definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "derived": {
            "type": "array",
            "items": {
                "$ref": "./OpenArabDictWord_derived.json"
            }
        },
        "translations": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "../translations/OpenArabDictHW4TranslationEntry.json"
                    }
                ]
            }
        },
        "text": {
            "type": "string"
        },
        "type": {
            "const": "particle"
        }
    },
    "required": ["text", "type"]
}