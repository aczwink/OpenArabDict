{    
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "OpenArabDict word definition",
    "description": "JSON Schema for OpenArabDict word definitions",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "derived": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        },
        "derivation": {
            "type": "string",
            "enum": [
                "active-participle",
                "adverbial-accusative",
                "feminine",
                "meaning-related",
                "nisba",
                "plural",
                "verbal-noun"
            ]
        },
        "dialect": {
            "type": "string",
            "enum": [
                "lb",
                "msa"
            ]
        },
        "form": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "stem": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 10
                        },
                        "parameters": {
                            "type": "string",
                            "minLength": 2,
                            "maxLength": 2
                        }
                    },
                    "required": ["stem", "parameters"]
                }
            ]
        },
        "gender": {
            "type": "string",
            "enum": [
                "female",
                "male"
            ]
        },
        "text": {
            "type": "string"
        },
        "translations": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "./OpenArabDictFreeTextTranslationEntry.json"
                    },
                    {
                        "$ref": "./OpenArabDictHW4TranslationEntry.json"
                    }
                ]
            }
        },
        "type": {
            "type": "string",
            "enum": [
                "adjective",
                "adverb",
                "noun",
                "preposition",
                "verb"
            ]
        }
    },
    "required": []
}